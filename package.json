{
  "name": "demotivator",
  "description": "Why do today what you can put off until tomorrow?",
  "version": "0.0.1",
  "private": true,
  "main": "src/server/index.js",
  "repository": "https://github.com/wolfpilot/demotivator.git",
  "author": "Razvan Negrea <howl@wolfpilot.co> (www.wolfpilot.co)",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "start": "nodemon -r esm src/server/index.ts",
    "build": "tsc -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier 'src/**/*.ts' --write",
    "validate": "tsc --noEmit",
    "lint": "eslint -f stylish \"**/*.ts\""
  },
  "dependencies": {
    "dotenv-flow": "^3.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-json-validator-middleware": "^2.1.1",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.1.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/json-schema": "^7.0.7",
    "@types/node": "^14.14.41",
    "@types/pg": "^7.14.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
